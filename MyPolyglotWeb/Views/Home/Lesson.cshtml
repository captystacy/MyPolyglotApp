@model ExerciseVM

@section Scripts {
    <script>
        let optionGroups = JSON.parse('@Json.Serialize(@Model.OptionGroups)');
    </script>
    <script src="~/js/lesson.js"></script>
}

<div class="lesson">
    <div>
        Урок @Model.Id
    </div>
    <div>
        @Model.RusPhrase
    </div>
    <div>
        Переведите предложение
    </div>
    <div class="buttons">
        @for (int i = 0; i < 2; i++)
        {
            <div class="option-group" index="@i">
                @foreach (var option in Model.OptionGroups.ElementAt(i).Options)
                {
                    <div class="button">
                        @option
                    </div>
                }
            </div>
        }
    </div>
    <div class="options-back button">
        ^
    </div>
</div>